@page "/ConsultaVhiculos"

@using EIMRentaaCar.BLL
@using EIMRentaaCar.Models

@inject IToastService toast

<EditForm Model="lista">
    <DataAnnotationsValidator />
    <div class="card">
        <div class="card-header">
            <h3>Consultas De Vehiculo</h3>
        </div>

        <div class="card-body">
            <div class="input-group mb-4">
                <div class="input-group">

                    <label for="filtro">Filtro: </label>
                    <select class="form-control ml-3 mr-3" @bind="Filtro">
                        <option value="" disabled selected>Seleccione un filtro</option>
                        <option value="Todo">Todo</option>
                        <option value="Id">Vehiculo ID</option>
                        <option value="Nombre">Vin</option>
                        <option value="Nombre">Marca</option>
                        <option value="Nombre">Modelo</option>
                    </select>

                    <label for="criterio ml-3 mr-3"> Criterio: </label>
                    <input type="search" class="form-control ml-3 mr-3" @bind-value="Criterio" />

                    <button type="button" class="btn btn-primary" @onclick="Buscar">Buscar </button>
                </div>
            </div>

            <table class=" table mb-3 mt-3">
                <thead class="thead-light">
                    <tr>
                        <th>Vehiculo ID</th>
                        <th>Vin</th>
                        <th>Marca</th>
                        <th>Modelo</th>
                        <th>Kilometraje</th>
                        <th>Año</th>
                        <th>Tipo</th>
                        <th>PrecioPorDia</th>
                        <th>PrecioVenta</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in lista)
                    {
                    <tr class="table-striped">
                        <td>@item.VehiculoId</td>
                        <td>@item.Vin</td>
                        <td>@item.Marca</td>
                        <td>@item.Modelo</td>
                        <td>@item.Kilometraje</td>
                        <td>@item.Año</td>
                        <td>@item.Tipo</td>
                        <td>@item.PrecioPorDia</td>
                        <td>@item.PrecioVenta</td>

                    </tr>}
                </tbody>
            </table>
        </div>
    </div>
</EditForm>

@code { private List<Vehiculos> lista { get; set; }

    private string Filtro { get; set; }
    private string Criterio { get; set; }
    private decimal TotalInventario { get; set; }
    public string mensaje;

    protected override void OnInitialized()
    {
        lista = new List<Vehiculos>();
    }

    private void Buscar()
    {
        try
        {
            if (Filtro == null)
            {
                toast.ShowWarning("Debe seleccionar un Filtro", "Aviso");
            }
            else
            {
                lista = VehiculosBLL.GetList(a => true);

                if (lista.Count == 0)
                {
                    toast.ShowWarning("No hay Articulos Registrados", "Aviso");
                }
                else
                {
                    mensaje = "";
                    switch (Filtro)
                    {
                        case "Todo":
                            lista = VehiculosBLL.GetList(e => true);
                            break;
                        case "VehiculoId":
                            lista = VehiculosBLL.GetList(e => e.VehiculoId== Convert.ToInt32(Criterio));
                            break;
                        case "Vin":
                            lista = VehiculosBLL.GetList(e => e.Vin == Criterio);
                            break;
                        case "Marca":
                            lista = VehiculosBLL.GetList(e => e.Marca == Criterio);
                            break;
                        case "Modelo":
                            lista = VehiculosBLL.GetList(e => e.Modelo == Criterio);
                            break;
                    }
                }
            }
        }
        catch (Exception)
        {
            throw;
        }
    }
}